@model IEnumerable<cetAsp3.Models.TodoItem>

@{
    ViewData["Title"] = "Index";
}

<h1>Jobs to do !!</h1>

<p>
    <a asp-action="Create">Add a New Task</a>
</p>
<p>
    @if (ViewBag.Showall)
    {
        <a asp-action="Index" asp-route-showall="false">Show Only Incomplete</a>
    }
    else
    {
        <a asp-action="Index" asp-route-showall="true">Show All</a>
    }
    
</p>
<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DueDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RemainingHour)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.isCompleted)
            </th>


            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @if (item.isCompleted)
                {
                    <del> @Html.DisplayFor(modelItem => item.Title)</del>
                }
                else
                {
                    @Html.DisplayFor(modelItem => item.Title)
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DueDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RemainingHour) hours
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isCompleted)
            </td>


            <td>
                @if (item.isCompleted)
                 {
                    <a asp-action="MakeInComplete" asp-route-id="@item.Id" asp-route-showAll="@ViewBag.Showall">Incomplete</a> 

                 }
                else
                {
                    <a asp-action="MakeComplete" asp-route-id="@item.Id" asp-route-showAll="@ViewBag.Showall">Complete</a> 
                }


               | <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
